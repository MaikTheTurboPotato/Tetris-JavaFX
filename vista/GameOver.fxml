<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.GameOverController">
   <children>
      <ImageView fitHeight="200.0" fitWidth="500.0" pickOnBounds="true">
         <image>
            <Image url="@../resources/Backgrounds/Degrade.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" spacing="50.0">
         <children>
            <Text strokeLineJoin="BEVEL" strokeType="OUTSIDE" strokeWidth="2.0" text="GAME OVER" textAlignment="CENTER" wrappingWidth="351.7366752624512">
               <font>
                  <Font size="62.0" />
               </font>
               <fill>
                  <LinearGradient endX="1.0" endY="1.0" startX="1.0">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color green="0.7666666507720947" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </fill>
               <stroke>
                  <LinearGradient endX="1.0" endY="1.0" startX="1.0">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="0.6535999774932861" green="0.6931624412536621" blue="0.7599999904632568" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </stroke>
            </Text>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#newGameAction" onMouseEntered="#mouseEnteredAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-radius: 25; -fx-background-color: #0b95ff; -fx-border-color: #2c2c2c; -fx-border-radius: 22; -fx-border-width: 3;" text="NEW GAME">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Button>
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitAction" onMouseEntered="#mouseEnteredAction" prefHeight="50.0" prefWidth="200.0" style="-fx-background-radius: 25; -fx-background-color: #0b95ff; -fx-border-color: #2c2c2c; -fx-border-radius: 22; -fx-border-width: 3;" text="EXIT">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="25.0" />
         </padding>
      </VBox>
   </children>
</Pane>
