<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="backgroundPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.MainMenuController">
   <children>
      <ImageView fx:id="backgroundImage" fitHeight="500.0" fitWidth="500.0" pickOnBounds="true">
         <image>
            <Image url="@../resources/Backgrounds/Degrade.png" />
         </image>
      </ImageView>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0">
         <center>
            <VBox alignment="CENTER" spacing="25.0">
               <children>
                  <Button fx:id="newGameButton" alignment="CENTER" mnemonicParsing="false" onAction="#newGameAction" onMouseEntered="#mouseEnteredAction" prefHeight="50.0" prefWidth="250.0" style="-fx-background-radius: 25; -fx-background-color: #0b95ff; -fx-border-color: #2c2c2c; -fx-border-radius: 22; -fx-border-width: 3;" text="NEW GAME">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Button>
                  <ImageView fitHeight="130.0" fitWidth="425.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/Pieces_Blocs/all%20Pieces.png" />
                     </image>
                  </ImageView>
                  <Button fx:id="exitButton" alignment="CENTER" layoutX="35.0" layoutY="160.0" mnemonicParsing="false" onAction="#exitAction" onMouseEntered="#mouseEnteredAction" prefHeight="50.0" prefWidth="250.0" style="-fx-background-radius: 25; -fx-background-color: #0b95ff; -fx-border-color: #2c2c2c; -fx-border-radius: 22; -fx-border-width: 3;" text="EXIT">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="75.0" left="25.0" right="25.0" top="50.0" />
               </padding>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <children>
                  <ImageView fitHeight="104.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/Backgrounds/Tetris%20LOGO.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </top>
         <bottom>
            <HBox prefWidth="500.0" BorderPane.alignment="CENTER" />
         </bottom>
         <left>
            <VBox prefHeight="300.0" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <VBox prefHeight="300.0" BorderPane.alignment="CENTER" />
         </right>
         <padding>
            <Insets bottom="25.0" left="10.0" right="10.0" top="25.0" />
         </padding>
      </BorderPane>
   </children>
</Pane>
