<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane fx:id="backgroundPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.ExitConfirmationController">
   <children>
      <ImageView fx:id="backgroundImage" fitHeight="230.0" fitWidth="376.0" pickOnBounds="true">
         <image>
            <Image url="@../resources/Backgrounds/Degrade.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" style="-fx-border-color: #2c2c2c; -fx-border-width: 5;">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text fill="#00d9ff" stroke="#364346" strokeType="OUTSIDE" strokeWidth="0.0" text="Are you sure you want to exit?" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction" onMouseEntered="#mouseEnteredAction" prefHeight="50.0" prefWidth="150.0" style="-fx-background-radius: 25; -fx-background-color: #0b95ff; -fx-border-color: #2c2c2c; -fx-border-radius: 22; -fx-border-width: 3;" text="CANCEL">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/Buttons/Cross.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="okButton" mnemonicParsing="false" onAction="#okActtion" onMouseEntered="#mouseEnteredAction" prefHeight="50.0" prefWidth="150.0" style="-fx-background-radius: 25; -fx-background-color: #0b95ff; -fx-border-color: #2c2c2c; -fx-border-radius: 22; -fx-border-width: 3;" text="OK">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/Buttons/Tick.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</Pane>
